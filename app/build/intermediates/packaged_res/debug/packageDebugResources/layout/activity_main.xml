<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:padding="@dimen/padding_main"
    android:id="@+id/mainRoot"
    tools:context=".MainActivity">




    <ImageButton
        android:id="@+id/btnThemeToggle"
        android:layout_width="@dimen/size_theme_toggle"
        android:layout_height="@dimen/size_theme_toggle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Toggle Dark Mode"
        android:src="@drawable/ic_moon"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_start_label"
                android:text="SELECT START TIME"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_label"
                android:letterSpacing="0.1"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tvClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="12:00:00"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_clock"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp" />

            <TextView
                android:id="@+id/btnResetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESET TO NOW"
                android:textColor="@color/blue_preset"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/layoutInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_bottom_interval_layout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMinus"
                        android:layout_width="@dimen/size_plus_minus_button"
                        android:layout_height="@dimen/size_plus_minus_button"
                        android:text="-"
                        android:textSize="@dimen/text_size_plus_minus"
                        android:textStyle="bold"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/btn_circle_bg"
                        android:textColor="@color/text_primary"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/etInterval"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="15"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_interval_input"
                        android:textStyle="bold"
                        android:background="@null"
                        android:layout_marginHorizontal="16dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPlus"
                        android:layout_width="@dimen/size_plus_minus_button"
                        android:layout_height="@dimen/size_plus_minus_button"
                        android:text="+"
                        android:textSize="@dimen/text_size_plus_minus"
                        android:textStyle="bold"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/btn_circle_bg"
                        android:textColor="@color/text_primary"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:paddingBottom="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn5m"
                        android:layout_width="@dimen/size_preset_button"
                        android:layout_height="@dimen/size_preset_button"
                        android:layout_marginEnd="8dp"
                        android:text="5m"
                        android:textSize="@dimen/text_size_preset"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_preset"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn10m"
                        android:layout_width="@dimen/size_preset_button"
                        android:layout_height="@dimen/size_preset_button"
                        android:layout_marginEnd="8dp"
                        android:text="10m"
                        android:textSize="@dimen/text_size_preset"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_preset"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn15m"
                        android:layout_width="@dimen/size_preset_button"
                        android:layout_height="@dimen/size_preset_button"
                        android:layout_marginEnd="8dp"
                        android:text="15m"
                        android:textSize="@dimen/text_size_preset"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/blue_preset"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn30m"
                        android:layout_width="@dimen/size_preset_button"
                        android:layout_height="@dimen/size_preset_button"
                        android:layout_marginEnd="8dp"
                        android:text="30m"
                        android:textSize="@dimen/text_size_preset"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_preset"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn60m"
                        android:layout_width="@dimen/size_preset_button"
                        android:layout_height="@dimen/size_preset_button"
                        android:text="60m"
                        android:textSize="@dimen/text_size_preset"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/gray_preset"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"/>

                </LinearLayout>
                
                <TextView
                    android:id="@+id/tvSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Sound: Default"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_sound_vibrate"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Vibrate"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sound_vibrate"
                    android:checked="true"/>
                    
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTimeFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="24-Hour Format"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sound_vibrate"
                    android:checked="false"/>


                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="00:00"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_clock"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    tools:visibility="visible"/>
                    
                <TextView
                    android:id="@+id/tvNextAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next alarm in..."
                    android:textColor="@color/text_secondary"
                    android:visibility="invisible"
                    tools:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_action_button"
        android:text="@string/start_reminder"
        android:textSize="@dimen/text_size_action_button"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green_start"
        app:cornerRadius="@dimen/corner_radius_action_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
