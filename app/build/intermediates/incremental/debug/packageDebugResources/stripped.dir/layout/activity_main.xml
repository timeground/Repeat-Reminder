<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:padding="20dp"
    tools:context=".MainActivity">




    <ImageButton
        android:id="@+id/btnThemeToggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Toggle Dark Mode"
        android:src="@drawable/ic_moon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <TextView
        android:id="@+id/tvStartLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="SELECT START TIME"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="12:00:00"
        android:textColor="@color/text_primary"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStartLabel" />

    <TextView
        android:id="@+id/btnResetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET TO NOW"
        android:textColor="@color/blue_preset"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClock" />



    <LinearLayout
        android:id="@+id/layoutInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnAction"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnResetTime">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMinus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="-"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#E2E8F0"
                android:textColor="@color/text_primary"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:paddingBottom="4dp"/>

            <EditText
                android:id="@+id/etInterval"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:text="15"
                android:textColor="@color/text_primary"
                android:textSize="56sp"
                android:textStyle="bold"
                android:background="@null"
                android:layout_marginHorizontal="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="+"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#E2E8F0"
                android:textColor="@color/text_primary"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5m"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:text="5m"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/gray_preset"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10m"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:text="10m"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/gray_preset"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn15m"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:text="15m"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/blue_preset"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn30m"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:text="30m"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/gray_preset"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn60m"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="60m"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/gray_preset"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

        </LinearLayout>
        
        <TextView
            android:id="@+id/tvSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sound: Default"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutInterval" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchVibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Vibrate"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSound" />
            
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTimeFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="24-Hour Format"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switchVibration" />


        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="00:00"
            android:textColor="@color/text_primary"
            android:textSize="48sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:visibility="visible"/>
            
        <TextView
            android:id="@+id/tvNextAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next alarm in..."
            android:textColor="@color/text_secondary"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/start_reminder"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green_start"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
